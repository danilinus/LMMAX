<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_leroy_merlin" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/back_btn" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/exit_otdel_btn" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:textAlignment="center"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/Primary"
        android:orientation="vertical"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/change_map"
                style="@style/button_sup_style"
                android:layout_width="match_parent"
                android:text="Изменить карту отдела" />

            <Button
                android:id="@+id/change_pass_btn"
                style="@style/button_sup_style"
                android:layout_width="match_parent"
                android:text="Сменить пароль" />

            <Button
                android:id="@+id/change_excel_btn"
                style="@style/button_sup_style"
                android:layout_width="match_parent"
                android:text="Изменить базу товаров" />

            <Button
                android:id="@+id/address_list_btn"
                style="@style/button_sup_style"
                android:layout_width="match_parent"
                android:text="Список адресов" />

            <Button
                android:id="@+id/statistic_btn"
                style="@style/button_sup_style"
                android:layout_width="match_parent"
                android:text="Статистика городов" />

            <Button
                android:id="@+id/excel_otch_btn"
                style="@style/button_sup_style"
                android:layout_width="match_parent"
                android:text="Отчёт Excel" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>